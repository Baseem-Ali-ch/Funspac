  <script>

    


document.addEventListener('DOMContentLoaded', async () => {
  try {
    const response = await fetch('/products');
    if (!response.ok) {
      throw new Error('Error fetching products');
    }
    const products = await response.json();
    populateProductTable(products);
  } catch (error) {
    console.error('Error:', error);
  }
});

function populateProductTable(products) {
  const productList = document.getElementById('product-list');
  productList.innerHTML = '';
  products.forEach(product => {
    const row = document.createElement('tr');
    row.setAttribute('data-product-id', product._id);
    row.innerHTML = `
      <td></td>
      <td><img src="${product.imageUrl_1}" alt="${product.name}" style="width: 50px; height: 50px;"></td>
      <td class="product-title">${product.name}</td>
      <td class="description">${product.description}</td>
      <td class="category">${product.category ? product.category.title : 'No Category'}</td>
      <td class="price">${product.price}</td>
      <td class="stock">${product.stock}</td>
      <td>
        <button class="btn btn-sm btn-icon btn-text-secondary waves-effect waves-light rounded-pill edit-btn"
          onclick="editProduct('${product._id}', '${product.name}', '${product.description}', '${product.category ? product.category._id : ''}', '${product.price}', '${product.stock}')">
          Edit
        </button>
      </td>
      <td>
        <select class="status" name="status" style="border: none; background-color: transparent; outline: none;">
          <option value="true" ${product.status ? 'selected' : ''}>Listed</option>
          <option value="false" ${!product.status ? 'selected' : ''}>Unlisted</option>
        </select>
      </td>
    `;
    productList.appendChild(row);
  });
}


function editProduct(productId, name, description, categoryId, price, stock) {
  const newUrl = `${window.location.pathname}/${productId}`;
  history.pushState({}, '', newUrl);
  populateModal(productId, name, description, categoryId, price, stock);
}

function editProduct(productId, name, description, categoryId, price, stock) {
  populateModal(productId, name, description, categoryId, price, stock);
}

function populateModal(id, name, description, category, price, stock) {
  document.getElementById('edit-product-id').value = id;
  document.getElementById('edit-product-name').value = name;
  document.getElementById('edit-product-description').value = description;
  document.getElementById('edit-product-category').value = category;
  document.getElementById('edit-product-price').value = price;
  document.getElementById('edit-product-stock').value = stock;
  $('#editProductModal').modal('show');
}

document.getElementById('editProductForm').addEventListener('submit', async (event) => {
  event.preventDefault(); // Prevent default form submission

  // Retrieve form data
  let id = document.getElementById('edit-product-id').value;
  let name = document.getElementById('edit-product-name').value;
  let description = document.getElementById('edit-product-description').value;
  let categoryId = document.getElementById('edit-product-category').value;
  let price = document.getElementById('edit-product-price').value;
  let stock = document.getElementById('edit-product-stock').value;

  // Prepare data object
  let formData = {
    id: id,
    name: name,
    description: description,
    categoryId: categoryId,
    price: price,
    stock: stock
  };

  try {
    // Send PUT request to server
    const response = await fetch(`/admin/update-product/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(formData)
    });

    if (!response.ok) {
      throw new Error('Failed to update product');
    }

    const updatedProduct = await response.json();

    // Update the corresponding row in the table
    updateTableRow(updatedProduct);

    // Show success message with SweetAlert
    Swal.fire({
      icon: 'success',
      title: 'Product Updated Successfully',
      showConfirmButton: false,
      timer: 1500
    });

    // Hide the modal
    $('#editProductModal').modal('hide');
  } catch (error) {
    console.error('Error:', error);

    // Handle errors or show error message with SweetAlert
    Swal.fire({
      icon: 'error',
      title: 'Oops... Something went wrong!',
      text: 'Failed to update product.',
    });
  }
});



function updateTableRow(updatedProduct) {
  let productId = updatedProduct._id;

  // Find the table row corresponding to the updated product
  let tableRow = document.querySelector(`#product-list tr[data-product-id="${productId}"]`);
  if (tableRow) {
    // Update the table row cells with updated product data
    tableRow.querySelector('.product-title').textContent = updatedProduct.name;
    tableRow.querySelector('.description').textContent = updatedProduct.description;
    tableRow.querySelector('.category').textContent = updatedProduct.category ? updatedProduct.category.title : 'No Category';
    tableRow.querySelector('.price').textContent = updatedProduct.price;
    tableRow.querySelector('.stock').textContent = updatedProduct.stock;
  }
}


  
</script>


