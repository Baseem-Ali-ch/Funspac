    const updatedProduct = {
      name: $('#edit-product-name').val(),
      description: $('#edit-product-description').val(),
      category: $('#edit-product-category').val(),
      price: $('#edit-product-price').val(),
      stock: $('#edit-product-stock').val()
    };

    $.ajax({
